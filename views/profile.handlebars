<link rel="stylesheet" href="/css/profile.css">


<main>
  <section class="tab1">
    <h2>welcome, {{name}}!</h2>
    <br>
    <p class="alice">reccommended products:</p>
    <br>
    <p class="alice">create a new forum post:</p>
    <form>
      <div class="forumflex">
        <input placeholder="date"></input> <br>
        <input id="title" placeholder="title"></input> <br>
      </div>
        <textarea class="forumtext" placeholder="enter text"></textarea> <br>
        <label>upload image:</label>
        <input type = "file" name = "upload" accept = "image/*"/> <br>
      <div class="buttonflex">
        <button class="forumbtn" id="postpreview">preview post</button> <br>
        <button class="forumbtn" id="postsubmit">post to forum!</button>
      </div>


    </form>


  </section>


  <section class="tab2">
    <img src="images/profiletab2.png" class="profiletab2">
    <div class="skincareresults">
      <p>
        skin type: combination<br><br>
        skin concerns: hyperpigmentation, fine lines, dehydration<br><br>
        SPF preference: chemical and physical ingredients <br><br>
        routine time: AM <br>
      </p>
    </div>
  </section>
</main>






