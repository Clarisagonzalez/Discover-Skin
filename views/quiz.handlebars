<body>

<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <canvas id="myChart" style="width: 100%; max-width: 600px;"></canvas>
    </div>

<script>
var xValues = ["Normal/Any", "Oily/Acne Prone", "Dry/Red/Eczema Prone", "Combination", "Inflamed/Sensitive", "Mature"];
// put values below
var yValues = [1, 2, 3, 4, 5, 6];
// put colors below
var barColors = ['red', 'blue', 'green', 'orange', 'purple', 'pink'];

new Chart("myChart", {
  type: "doughnut",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    title: {
      display: true,
      text: "What is your skin type? User responses"
    }
  }
});
</script>

</body>


